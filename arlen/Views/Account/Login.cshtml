@model arlen.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">Вход</h3>
                @Html.ValidationSummary(false)
                <fieldset>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnURL" value="@ViewBag.returnURL" />
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-lg", placeholder = "Введите логин", @autofocus = true })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control input-lg", placeholder = "Введите пароль" })
                        </div>
                        <input class="btn btn-lg btn-block btn-login" value="Войти" type="submit">
                    }
                </fieldset>
            </div>
        </div>
    </div>
</div>